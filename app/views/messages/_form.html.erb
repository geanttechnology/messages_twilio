<%= render "layouts/errors", :object => @message %>

<%= form_for @message, id: "new_message_form", remote: true do |f| %>
  <%= f.label :to %>
  <%= f.select :to,
  options_for_select(
  [
    ['someone', '5038500733'],
    ['another person', '9713731374']
  ]
), {:include_blank => 'Choose and Phone Number:'},
   {:class => "form-control"}
 %>
  <%= f.label :from %>
  <%= f.text_field :from, class: "form-control" %>
  <%= f.label :body %>
  <%= f.text_area :body, size: "24x20", class: "form-control" %>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
