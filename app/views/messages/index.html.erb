<h1>Messages</h1>

<%= link_to "New message", new_message_path, id: "new_message_link", :remote => true %>

<ul id="message_list">
  <% @messages.each do |message| %>
    <li><%= link_to message.id, message_path(message) %> | To: <%= message.to %> | From: <%= message.from %>| <%= message.body %></li>
  <% end %>
</ul>
